@page
@model DeleteCommentsModel

<h1>Delete Rating</h1>



<form method="post">
    <input type="hidden" name="itemId" value="@Model.ItemId" />
     <label for="description" class="control-label">Rated by:</label>
     <blockquote>@Model.Item.Winner</blockquote>
     

    <div class="form-group">
    <label for="description" class="control-label">Rating:</label>
    <div>
    @for (int i = 1; i <= 5; i++)
        {
            if (i <= @Model.Rating.Stars)
            {
                <span style="color: yellow;">★</span> <!-- Yellow star -->
            }
            else
            {
                <span style="color: grey;">☆</span> <!-- Grey star -->
            }
        }
    </div>
        <label for="description" class="control-label">Date:</label>
        <blockquote>@Model.Rating.RateTime</blockquote>
        <label for="description" class="control-label">Comments:</label>
        <div id="description" class="form-control">@Model.Description</div>
    </div>
    <div class="form-group">
        <input type="submit" value="Delete Rating" class="btn btn-primary" />
        <a class="btn btn-secondary" href="./ItemForSale?id=@Model.ItemId">Cancel</a>
    </div>
</form>